    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            // "args": "${command:pickArgs}",
            "justMyCode": true
        },
        {
            "name": "Python include modules",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            // "args": "${command:pickArgs}",
            "justMyCode": false
        },
        {
            "name": "Docker: Attach to FastAPI Backend",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "port": 5678,
                "host": "localhost",
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/backend/app",
                    "remoteRoot": "/usr/src/app/app"
                }
            ]
        },
        {
            "name": "Docker: Attach to Regen-Requester",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "port": 5679,
                "host": "localhost",
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/regen-requester/app",
                    "remoteRoot": "/usr/src/app/app"
                }
            ]
        },
    ]
}